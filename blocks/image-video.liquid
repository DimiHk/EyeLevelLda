<div id="video" style="height: 'auto'">
  <video
    class="custom-video"
    style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0; object-fit: fill;"
    controls
    autoplay
    muted
    loop
    referrerpolicy="strict-origin-when-cross-origin"
  >
    <source src="{{ 'Portugal.mp4' | asset_url }}" type="video/mp4">
    Your browser does not support the video tag.
  </video>
</div>
{% stylesheet %}
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Custom Image/Video",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "Custom Media Block",
      "category": "Media"
    }
  ]
}
{% endschema %}
