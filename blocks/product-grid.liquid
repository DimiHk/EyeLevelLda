{% comment %}
  Product Grid Section - dynamic mapping of products with thumbnail navigation arrows cycling through variants, inspired by revo.com
{% endcomment %}

<section class="product-grid-section">
  <div class="product-grid-wrapper">
    {% paginate collections.all.products by 12 %}
      <div class="product-grid">
        {% for product in collections.all.products %}
          <div class="product-card" data-product-id="{{ product.id }}">
            <div class="product-main">
              <img
                src="{{ product.featured_image | image_url }}"
                alt="{{ product.title }}"
                class="main-image"
                loading="lazy"
              >
              <h3 class="product-title">{{ product.title }}</h3>
            </div>
            <div class="variant-thumbnails" data-product-id="{{ product.id }}">
              {% assign media_counter = 0 %}
              {% for image in product.images %}
                {% assign media_counter = media_counter | plus: 1 %}
                <img
                  src="{{ image | image_url }}"
                  alt="{{ product.title }} {% if image == product.featured_image %}Main Image{% else %}Variant{% endif %}"
                  class="variant-thumb {% if image == product.featured_image %}selected{% endif %} {% if media_counter > section.settings.thumbnails_per_page %}hidden{% endif %}"
                  loading="lazy"
                  onmouseover="previewThumbnail('{{ product.id }}', '{{ image | image_url }}', this)"
                  onclick="selectThumbnail('{{ product.id }}', '{{ image | image_url }}', this)"
                  data-index="{{ media_counter }}"
                >
                {% if media_counter == section.settings.thumbnails_per_page %}
                  {% assign max_thumbnails = section.settings.thumbnails_per_page | plus: 1 %}
                  {% if product.images.size > max_thumbnails %}
                    <div class="thumb-overflow right-arrow">
                      <span class="arrow-circle" onclick="showNextThumbnails('{{ product.id }}')">→</span>
                    </div>
                  {% endif %}
                  {% break %}
                {% endif %}
              {% endfor %}
              {% if media_counter > section.settings.thumbnails_per_page %}
                <div class="thumb-overflow left-arrow hidden">
                  <span class="arrow-circle" onclick="showPrevThumbnails('{{ product.id }}')">←</span>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="pagination">
        {{ paginate | default_pagination }}
      </div>
    {% endpaginate %}
  </div>
</section>

{% stylesheet %}
  .product-grid-section {
    padding: 2rem;
    background-color: #f9f9f9;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  @media (max-width: 749px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 479px) {
    .product-grid {
      grid-template-columns: 1fr;
    }
  }

  .product-card {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    padding: 1rem;
  }

  .product-main {
    position: relative;
  }

  .main-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 4px;
    transition: opacity 0.3s ease; /* Smooth image swap */
    min-height: 500px;
    max-height: 500px;
    min-height: 500px;
    max-height: 500px;
  }

  .product-title {
    margin-top: 0.5rem;
    font-size: 1rem;
    text-align: center;
    color: #333;
  }

  .variant-thumbnails {
    display: flex;
    flex-wrap: nowrap;
    gap: 0.5rem;
    justify-content: center;
    margin-top: 0.5rem;
    position: relative;
    padding: 0 40px; /* Space for arrows */
  }

  .variant-thumb {
    width: 30px;
    height: 30px;
    object-fit: cover;
    border-radius: 50%; /* Circular thumbnails like Revo */
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .variant-thumb:hover,
  .variant-thumb.selected {
    opacity: 1;
    transform: scale(1.1); /* Slight scale on hover/selected */
    border: 2px solid #007bff; /* Blue border for selected */
  }

  .variant-thumb.hidden {
    display: none;
  }

  .thumb-overflow {
    position: absolute;
    height: 30px;
    width: 30px;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    top: 50%;
    transform: translateY(-50%);
  }

  .thumb-overflow.left-arrow {
    left: 0;
  }

  .thumb-overflow.right-arrow {
    right: 0;
  }

  .thumb-overflow.hidden {
    display: none;
  }

  .arrow-circle {
    font-size: 0.8rem;
    color: #333;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Grid With Modal",
  "settings": [
    {
      "type": "range",
      "id": "thumbnails_per_page",
      "label": "Thumbnails per page",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Product Grid With Modal"
    }
  ]
}
{% endschema %}
