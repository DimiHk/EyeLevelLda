{% comment %}
  Product Grid Section - dynamic mapping of products with thumbnail navigation arrows cycling through variants, inspired by revo.com
{% endcomment %}

<section class="product-grid-section">
  <div class="product-grid-wrapper">
    {% paginate collections.all.products by 12 %}
      <div class="product-grid">
        {% for product in collections.all.products %}
          <div class="product-card" data-product-id="{{ product.id }}">
            <div class="product-main">
              <img
                src="{{ product.featured_image | image_url }}"
                alt="{{ product.title }}"
                class="main-image"
                loading="lazy"
                id="main-image-{{ product.id }}"
              >
              <span class="product-title">{{ product.title }}</span>
            </div>
            <!-- Swiper wrapper for variant thumbnails -->
            <div class="swiper variant-swiper-{{ product.id }}">
              <div class="swiper-wrapper">
                {% for image in product.images %}
                  <div class="swiper-slide">
                    <img
                      src="{{ image | image_url }}"
                      alt="{{ product.title }} Variant"
                      class="variant-thumb {% if image == product.featured_image %}selected{% endif %}"
                      loading="lazy"
                      onmouseover="previewThumbnail('{{ product.id }}', '{{ image | image_url }}', this)"
                      onclick="selectThumbnail('{{ product.id }}', '{{ image | image_url }}', this)"
                    >
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="custom-pagination">
        {% if paginate.pages > 1 %}
          <nav class="pagination-nav">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="arrow prev" aria-label="Previous page">
                <svg width="15" height="9" viewBox="0 0 15 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M4.23913 9L4.70022 8.51061L1.24826 4.84679L15 4.84679V4.15459L1.24826 4.15459L4.70087 0.489386L4.23978 0L-9.53674e-07 4.50069L4.23913 9Z" fill="white"/>
                </svg>
              </a>
            {% else %}
              <span class="arrow prev disabled">
                <svg width="15" height="9" viewBox="0 0 15 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M4.23913 9L4.70022 8.51061L1.24826 4.84679L15 4.84679V4.15459L1.24826 4.15459L4.70087 0.489386L4.23978 0L-9.53674e-07 4.50069L4.23913 9Z" fill="white"/>
                </svg>
              </span>
            {% endif %}

            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a href="{{ part.url }}" class="page-ball">{{ part.title }}</a>
              {% elsif part.title == paginate.current_page %}
                <span class="page-ball current">{{ part.title }}</span>
              {% else %}
                <span class="page-ball dots">{{ part.title }}</span>
              {% endif %}
            {% endfor %}

            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="arrow next" aria-label="Next page">
                <svg width="15" height="9" viewBox="0 0 15 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M10.7609 0L10.2998 0.489386L13.7517 4.15321H0V4.84541H13.7517L10.2991 8.51061L10.7602 9L15 4.49931L10.7609 0Z" fill="white"/>
                </svg>
              </a>
            {% else %}
              <span class="arrow next disabled">
                <svg width="15" height="9" viewBox="0 0 15 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M10.7609 0L10.2998 0.489386L13.7517 4.15321H0V4.84541H13.7517L10.2991 8.51061L10.7602 9L15 4.49931L10.7609 0Z" fill="white"/>
                </svg>
              </span>
            {% endif %}
          </nav>
        {% endif %}
      </div>
    {% endpaginate %}
  </div>
</section>

{% stylesheet %}
  .product-grid-section {
    padding: 2rem;
    width: 100%;
  }

  .product-main {
    width: 100%;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  @media (max-width: 1024px) {
    .product-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 600px) {
    .product-grid {
      grid-template-columns: 1fr;
    }

    .variant-thumb {
      width: 48px;
      height: 48px;
    }
  }

  .product-card {
    display: flex;
    flex-direction: column;
    overflow: hidden;
    position: relative;
    align-items: center;
    gap: 0.25rem;
    padding: 5px;
  }

  .main-image {
    width: 100%;
    height: 250px;
    max-width: none !important;
    object-fit: cover;
    border-radius: 4px;
    transition: opacity 0.3s ease;
  }

  .product-title {
    font-size: 1rem;
    text-align: center;
    color: #333;
    position: absolute;
    top: 15px;
    left: 0;
    right: 0;
  }

  .variant-thumb {
    width: 60px;
    height: 60px;
    object-fit: cover;
    opacity: 0.7;
    cursor: pointer;
    border-radius: 4px;
    transition: 0.2s;
  }

  .variant-thumb:hover,
  .variant-thumb.selected {
    opacity: 1;
    transform: scale(1.1);
    border: 2px solid #007bff;
  }

  .swiper {
    position: relative;
  }

  .swiper-slide {
    width: auto;
    height: auto;
    padding: 5px;
  }

  @media (max-width: 460px) {
    .product-grid {
      grid-template-columns: 1fr;
    }

    .variant-thumb {
      width: 50px;
      height: 50px;
    }
  }
  .custom-pagination {
    display: flex;
    justify-content: center;
    margin: 2rem 0;
    padding: 1rem;
    border-radius: 8px;
    flex-wrap: wrap;
  }

  .pagination-nav {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    max-width: 100%;
    justify-content: center;
  }

  .page-ball.dots {
    color: #000 !important;
  }

  /* Dots (balls) */
  .page-ball {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: #000;
    color: #fff;
    font-size: 14px;
    text-decoration: none;
    transition: background-color 0.3s, transform 0.2s;
    font-weight: 500;
  }

  .page-ball:hover {
    background-color: #fff;
    color: #000;
    border: 0.5px solid #000;
    transform: scale(1.05);
  }

  .page-ball.current {
    background-color: #fff;
    color: #000;
    font-weight: bold;
    border: 0.5px solid #000;
  }

  .page-ball.dots {
    background: transparent;
    box-shadow: none;
    cursor: default;
    pointer-events: none;
  }

  /* Arrows */
  .arrow {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    font-size: 18px;
    background-color: #000;
    border-radius: 6px;
    color: #fff;
    transition: background-color 0.3s, transform 0.2s;
    font-weight: bold;
  }

  .arrow:hover {
    background-color: #555;
    color: #fff;
    transform: scale(1.05);
  }

  .arrow.disabled {
    background-color: #333;
    color: #777;
    cursor: not-allowed;
    pointer-events: none;
  }

  .arrow.prev {
    margin-right: 0.4rem;
  }

  .arrow.next {
    margin-left: 0.4rem;
  }

  /* ðŸ“± Mobile Enhancements */
  @media (max-width: 480px) {
    .custom-pagination {
      padding: 0.5rem;
    }

    .pagination-nav {
      gap: 0.3rem;
    }

    .page-ball,
    .arrow {
      width: 28px;
      height: 28px;
      font-size: 12px;
    }

    .page-ball.current {
      font-size: 13px;
    }

    .arrow {
      border-radius: 4px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "range",
      "id": "thumbnails_per_page",
      "label": "Thumbnails per page",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 3
    }
  ],
  "presets": [
    {
      "name": "Product Grid"
    }
  ]
}
{% endschema %}
