{% comment %} Before and After Slider Section {% endcomment %}
<style>
  .before-after-container {
    position: relative;
    width: 100%;
    max-width: 800px;
    height: auto;
    margin: 0 auto;
    overflow: hidden;
  }
  .before-after-container img {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
  }
  .before-image {
    z-index: 1;
    filter: brightness(1.2); /* Brightness on before image */
  }
  .after-image {
    z-index: 2;
    clip-path: inset(0 50% 0 0);
  }
  .slider {
    position: absolute;
    top: 0;
    left: 50%;
    width: 4px;
    height: 100%;
    background: #fff;
    cursor: ew-resize;
    z-index: 3;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
    touch-action: none; /* Prevent default touch behaviors */
  }
  .slider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 40px;
    height: 40px;
    background: #fff;
    border-radius: 50%;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
  }
  .slider::after {
    content: 'â†”';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 20px;
    color: #333;
  }
  .error-message {
    display: none;
    color: red;
    text-align: center;
    padding: 20px;
  }

  /* Mobile-specific styles */
  @media (max-width: 768px) {
    .before-after-container {
      max-width: 100%;
      min-height: 300px;
      max-height: 80vh; /* Limit to 80% of viewport height */
      height: auto;
    }
    .before-after-container img {
      width: 100%;
      height: auto;
      min-height: 300px;
      max-height: 80vh;
      object-fit: cover;
    }
    .slider {
      width: 6px; /* Thicker for touch */
    }
    .slider::before {
      width: 48px; /* Larger touch target */
      height: 48px;
    }
  }
</style>

<section class="before-after-container">
  <img
    class="before-image"
    src="https://cdn.shopify.com/s/files/1/0920/9806/8863/files/portugal.jpg?v=1749588975"
    alt="Before Image"
    loading="lazy"
    onerror="this.parentElement.querySelector('.error-message').style.display='block';"
  >
  <img
    class="after-image"
    src="https://cdn.shopify.com/s/files/1/0920/9806/8863/files/portugal.jpg?v=1749588975"
    alt="After Image"
    loading="lazy"
    onerror="this.parentElement.querySelector('.error-message').style.display='block';"
  >
  <div class="slider"></div>
  <div class="error-message">Failed to load images. Please check the image URLs.</div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const container = document.querySelector('.before-after-container');
    const afterImage = document.querySelector('.after-image');
    const slider = document.querySelector('.slider');
    let isDragging = false;

    if (!container || !afterImage || !slider) {
      console.error('Before-after slider elements not found.');
      return;
    }

    function updateSliderPosition(x) {
      const rect = container.getBoundingClientRect();
      let percentage = ((x - rect.left) / rect.width) * 100;
      percentage = Math.max(0, Math.min(100, percentage));
      afterImage.style.clipPath = `inset(0 ${100 - percentage}% 0 0)`;
      slider.style.left = `${percentage}%`;
    }

    slider.addEventListener('mousedown', () => {
      isDragging = true;
    });

    document.addEventListener('mouseup', () => {
      isDragging = false;
    });

    document.addEventListener('mousemove', (e) => {
      if (isDragging) {
        updateSliderPosition(e.clientX);
      }
    });

    container.addEventListener('touchstart', (e) => {
      isDragging = true;
      updateSliderPosition(e.touches[0].clientX);
    });

    container.addEventListener('touchmove', (e) => {
      if (isDragging) {
        e.preventDefault(); // Prevent scrolling while dragging
        updateSliderPosition(e.touches[0].clientX);
      }
    });

    container.addEventListener('touchend', () => {
      isDragging = false;
    });

    // Initialize slider at 50%
    updateSliderPosition(container.getBoundingClientRect().left + container.getBoundingClientRect().width / 2);
  });
</script>

{% schema %}
{
  "name": "Before and After",
  "tag": "section",
  "class": "before-after-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "before_image",
      "label": "Before Image"
    },
    {
      "type": "image_picker",
      "id": "after_image",
      "label": "After Image"
    }
  ],
  "presets": [
    {
      "name": "Before and After",
      "category": "Image"
    }
  ]
}
{% endschema %}
