{% style %}
  @font-face {
     font-family: 'Lexend Exa';
     font-weight: 100;
     src: url('/assets/LexendExa-Thin.woff2') format('woff2');
   }

   @font-face {
     font-family: 'Lexend Exa';
     font-weight: 200;
     src: url('/assets/LexendExa-ExtraLight.woff2') format('woff2');
   }

   @font-face {
     font-family: 'Lexend Exa';
     font-weight: 300;
     src: url('/assets/LexendExa-Light.woff2') format('woff2');
   }

   @font-face {
     font-family: 'Lexend Exa';
     font-weight: 400;
     src: url('/assets/LexendExa-Regular.woff2') format('woff2');
   }

   @font-face {
     font-family: 'Lexend Exa';
     font-weight: 500;
     src: url('/assets/LexendExa-Medium.woff2') format('woff2');
   }

   @font-face {
     font-family: 'Lexend Exa';
     font-weight: 600;
     src: url('/assets/LexendExa-SemiBold.woff2') format('woff2');
   }

   @font-face {
     font-family: 'Lexend Exa';
     font-weight: 700;
     src: url('/assets/LexendExa-ExtraBold.woff2') format('woff2');
   }

   @font-face {
     font-family: 'Lexend Exa';
     font-weight: 800;
     src: url('/assets/LexendExa-Black.woff2') format('woff2');
   }

     :root {
       --font-primary--family: 'Lexend Exa';
       --font-primary--style: normal;
       --font-primary--weight: 400;
       --font-thin: 100;
       --font-extralight: 200;
       --font-light: 300;
       --font-regular: 400;
       --font-medium: 500;
       --font-semibold: 600;
       --font-bold: 700;
       --font-extrabold: 800;
       --font-black: 900;
       --page-width: {{ settings.max_page_width }};
       --page-margin: {{ settings.min_page_margin }}px;
       --color-background: {{ settings.background_color }};
       --color-foreground: {{ settings.foreground_color }};
       --style-border-radius-inputs: {{ settings.input_corner_radius }}px;
     }
{% endstyle %}
