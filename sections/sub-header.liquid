<section class="sub-header">
  <div class="sub-header__container">
    <div class="sub-header__box__container">
      {% if section.settings['left-box-image'] != blank %}
        <img
          src="{{ section.settings.left-box-image | image_url: width: 26, height: 10 }}"
          alt="Left Box Image"
          class="box_image"
          width="26"
          height="26"
        >
      {% endif %}
      <span class="sub-header__box-text">
        {{ section.settings['box-text'] }}
      </span>
      {% if section.settings['right-box-image'] != blank %}
        <img
          src="{{ section.settings.right-box-image | image_url:  width: 26, height: 10 }}"
          alt="Right Box Image"
          class="box_image"
          width="26"
          height="26"
        >
      {% endif %}
    </div>
    <div class="sub-header__info_container">
      {% if section.settings['info-image'] != blank %}
        <img
          src="{{ section.settings.info-image | image_url: width: 600 }}"
          alt="Info Image"
          width="500"
          height="500"
        >
      {% endif %}
      <div class="sub-header__info-text">
        {% for i in (1..5) %}
          {% capture key %}info_text_{{ i }}{% endcapture %}
          {% assign text_item = section.settings[key] %}
          {% if text_item != blank %}
            <p>{{ text_item | newline_to_br }}</p>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .sub-header__box__container {
    display: flex;
    background-color: rgba(0, 0, 0, 0.8);
    align-items: center;
    justify-content: center;
    padding: 1rem;
    gap: 1rem;
  }

  .box_image {
    padding-top: 3.5px;
  }

  .sub-header__box-text {
    color: #fff;
    font-size: 0.875rem;
    text-align: center;
    font-weight: 300;
  }

  .sub-header__info_container {
    padding-top: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: auto;
    width: 80%;
    gap: 2rem;
  }

  .sub-header__info-text p {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 0.875rem;
    color: #333;
    font-weight: 500;
    line-height: 1.75;
    text-align: center;
    padding: 1rem;
  }

  @media (min-width: 1200px) {
    .sub-header__info_container {
      width: 50%;
    }
  }
{% endstylesheet %}

