<header class="header__container">
  {% for block in section.blocks %}
    {% render block %}
  {% endfor %}
</header>

{% stylesheet %}
  .header__container {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 0.5rem;
    padding-right: 0.5rem;
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
    background-color: var(--color-background, #fff);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "blocks": [{ "type": "@theme" }],
  "presets": [{ "name": "t:general.header" }],
  "settings": []
}
{% endschema %}
