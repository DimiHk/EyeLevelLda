<footer>
  <!-- Render logo block at the top -->
  {% for block in section.blocks %}
    {% if block.type == 'logo' %}
      {% render block %}
    {% endif %}
  {% endfor %}

  <div class="footer__copyright">
    Copyright Â© {{ 'now' | date: '%Y' }} Eyelevel Unipessoal, Lda - All Rights Reserved
  </div>

  <!-- Render logo block at the bottom -->
  {% for block in section.blocks %}
    {% if block.type == 'logo' %}
      {% render block %}
    {% endif %}
  {% endfor %}
</footer>

{% stylesheet %}
  footer {
    display: flex;
    flex-direction: column; /* Stack elements vertically */
    justify-content: center;
    align-items: center;
    padding: 20px;
    background-color: #333333;
  }

  .footer__copyright {
    color: #fff;
    font-size: 14px;
    text-align: center;
    margin: 20px 0; /* Add spacing around copyright */
  }

  /* Ensure logo styling is included */
  .header__logo {
    width: var(--logo-width-desktop);
    height: auto;
  }

  @media (max-width: 749px) {
    .header__logo {
      width: var(--logo-width-mobile);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "blocks": [
    {
      "type": "logo",
      "name": "t:general.logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:labels.logo_image"
        },
        {
          "type": "range",
          "id": "logo_width_desktop",
          "label": "Desktop logo width (px)",
          "min": 50,
          "max": 600,
          "step": 10,
          "default": 200
        },
        {
          "type": "range",
          "id": "logo_width_mobile",
          "label": "Mobile logo width (px)",
          "min": 30,
          "max": 400,
          "step": 10,
          "default": 150
        }
      ]
    }
  ],
  "settings": []
}
{% endschema %}
