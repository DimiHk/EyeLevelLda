<footer class="custom-footer">
  <div class="footer__row">
    <div class="footer__logo-left">
      <a href="{{ routes.root_url }}">
        <img
          class="footer__image footer__image-left"
          src="{{ section.settings.logo_left | image_url }}"
          alt="{{ shop.name }}"
          loading="lazy"
          width="{{ section.settings.logo_left_width_desktop }}"
          height="auto"
          style="
            --logo-left-width-desktop: {{ section.settings.logo_left_width_desktop }}px;
            --logo-left-width-mobile: {{ section.settings.logo_left_width_mobile }}px;
          "
        >
      </a>
    </div>

    <div class="footer__copyright">&copy; {{ 'now' | date: '%Y' }} Eyelevel Unipessoal, Lda - All Rights Reserved</div>

    <div class="footer__logo-right">
      {% if section.settings.logo_right %}
        <img
          class="footer__image footer__image-right"
          src="{{ section.settings.logo_right | image_url }}"
          alt="Partner logo"
          loading="lazy"
          width="{{ section.settings.logo_right_width_desktop }}"
          height="auto"
          style="
            --logo-right-width-desktop: {{ section.settings.logo_right_width_desktop }}px;
            --logo-right-width-mobile: {{ section.settings.logo_right_width_mobile }}px;
          "
        >
      {% endif %}
    </div>
  </div>
</footer>

{% stylesheet %}
  .custom-footer {
    background-color: #333;
    padding: 20px;
    color: #fff;
  }

  .footer__row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }

  .footer__logo-left,
  .footer__logo-right {
    flex: 0 0 auto;
  }

  .footer__copyright {
    flex: 1 1 auto;
    text-align: center;
    font-size: 14px;
    color: #fff;
  }

  /* Default styles for logos (desktop) */
  .footer__image-left {
    width: var(--logo-left-width-desktop);
  }

  .footer__image-right {
    width: var(--logo-right-width-desktop);
  }

  .footer__image {
    height: auto;
  }

  /* Responsive styles */
  @media (max-width: 749px) {
    .footer__image-left {
      width: var(--logo-left-width-mobile);
    }

    .footer__image-right {
      width: var(--logo-right-width-mobile);
    }

    .footer__row {
      flex-direction: column;
      text-align: center;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Footer Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_left",
      "label": "Left Logo"
    },
    {
      "type": "number",
      "id": "logo_left_width_desktop",
      "label": "Left Logo Width (Desktop in px)",
      "default": 120
    },
    {
      "type": "number",
      "id": "logo_left_width_mobile",
      "label": "Left Logo Width (Mobile in px)",
      "default": 80
    },
    {
      "type": "image_picker",
      "id": "logo_right",
      "label": "Right Image"
    },
    {
      "type": "number",
      "id": "logo_right_width_desktop",
      "label": "Right Image Width (Desktop in px)",
      "default": 120
    },
    {
      "type": "number",
      "id": "logo_right_width_mobile",
      "label": "Right Image Width (Mobile in px)",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Footer with Two Logos"
    }
  ]
}
{% endschema %}
