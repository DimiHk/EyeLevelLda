<footer class="custom-footer">
  <div class="footer__row">
    <div class="footer__logo-left">
      <a href="{{ routes.root_url }}">
        <img
          class="footer__image"
          src="{{ section.settings.logo_left | image_url }}"
          alt="{{ shop.name }}"
          loading="lazy"
        >
      </a>
    </div>

    <div class="footer__copyright">&copy; {{ 'now' | date: '%Y' }} Eyelevel Unipessoal, Lda - All Rights Reserved</div>

    <div class="footer__logo-right">
      {% if section.settings.logo_right %}
        <img
          class="footer__image"
          src="{{ section.settings.logo_right | image_url }}"
          alt="Partner logo"
          loading="lazy"
        >
      {% endif %}
    </div>
  </div>
</footer>

{% stylesheet %}
  .custom-footer {
    background-color: #333;
    padding: 20px;
    color: #fff;
  }

  .footer__row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }

  .footer__image {
    width: var(--logo-width-desktop);
    height: auto;
  }

  .footer__logo-left,
  .footer__logo-right {
    flex: 0 0 auto;
  }

  .footer__copyright {
    flex: 1 1 auto;
    text-align: center;
    font-size: 14px;
    color: #fff;
  }

  /* CSS variables for dynamic logo sizing */
  .custom-footer {
    --logo-width-desktop: {{ section.settings.logo_width_desktop | default: 120 }}px;
    --logo-width-mobile: {{ section.settings.logo_width_mobile | default: 80 }}px;
  }

  @media (max-width: 749px) {
    .footer__image {
      width: var(--logo-width-mobile);
    }

    .footer__row {
      flex-direction: column;
      text-align: center;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Footer Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_left",
      "label": "Left Logo"
    },
    {
      "type": "image_picker",
      "id": "logo_right",
      "label": "Right Image"
    },
    {
      "type": "number",
      "id": "logo_width_desktop",
      "label": "Logo Width (Desktop in px)",
      "default": 120
    },
    {
      "type": "number",
      "id": "logo_width_mobile",
      "label": "Logo Width (Mobile in px)",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Footer with Two Logos"
    }
  ]
}
{% endschema %}
